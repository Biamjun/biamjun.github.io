    <!-- === JavaScript === -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- Chart.js Logic ---
            function createSkillsChart() {
                const ctx = document.getElementById('skillsChart');
                if (!ctx) return;

                const chartData = {
                    labels: [
                        'Python Programming',
                        'ML Frameworks (PyTorch/TF)',
                        'Data Analysis & Statistics',
                        'Physics & Math Modeling',
                        'Generative Models (Theory)'
                    ],
                    datasets: [{
                        label: 'Proficiency',
                        data: [90, 85, 90, 95, 80],
                        backgroundColor: 'rgba(5, 150, 105, 0.2)', /* NEW: emerald-600 with alpha */
                        borderColor: 'rgba(5, 150, 105, 1)', /* NEW: emerald-600 */
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(5, 150, 105, 1)', /* NEW: emerald-600 */
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(5, 150, 105, 1)' /* NEW: emerald-600 */
                    }]
                };

                const chartOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                    scales: {
                        r: {
                            angleLines: {
                                color: 'rgba(0, 0, 0, 0.1)'
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.1)'
                            },
                            pointLabels: {
                                font: {
                                    size: 13,
                                    family: "'Inter', sans-serif"
                                },
                                color: '#334155' // slate-700
                            },
                            ticks: {
                                backdropColor: 'transparent',
                                color: '#64748b', // slate-500
                                beginAtZero: true,
                                min: 0,
                                max: 100,
                                stepSize: 20,
                                font: {
                                    size: 10
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.r !== null) {
                                        label += context.parsed.r + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                };

                new Chart(ctx, {
                    type: 'radar',
                    data: chartData,
                    options: chartOptions
                });
            }

            // --- Scrollspy Logic ---
            const sections = document.querySelectorAll('.content-section');
            const navLinks = document.querySelectorAll('.nav-link');
            const sectionOffset = 150; // Offset to trigger highlight a bit earlier

            function updateActiveNav() {
                let currentSectionId = '';

                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (window.scrollY >= sectionTop - sectionOffset) {
                        currentSectionId = section.getAttribute('id');
                    }
                });

                let activeFound = false;
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    const linkHref = link.getAttribute('href');

                    if (linkHref === '#' + currentSectionId) {
                        link.classList.add('active');
                        activeFound = true;
                    }
                });

                // If at the top of the page, default to 'About'
                if (!activeFound && window.scrollY < sections[0].offsetTop - sectionOffset) {
                    const aboutLink = document.getElementById('nav-about');
                    if(aboutLink) aboutLink.classList.add('active');
                }
            }

            // Initial call
            createSkillsChart();
            updateActiveNav();

            // Listen for scroll events
            window.addEventListener('scroll', updateActiveNav);
        });
    </script>

</body>
